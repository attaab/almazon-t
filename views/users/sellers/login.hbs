<div class="container container-fluid container-signup">
  <div class="container-sign-options">
    <ul>
      <li><a href="/buyer/login">مشتري</a></li>
      <li><a href="/seller/login">بائع</a></li>
      <li><a href="#">شركات الشحن</a></li>
      <li><a href="#">المهندسين</a></li>
    </ul>
  </div>
  <form class="signup" method="POST" action="/seller/login">
    {{# if hasErrors}}
      <div class="alert alert-danger" style="">
        {{# each error}}
          {{this}}
        {{/ each}}
        <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      </div>
    {{/ if}}
    {{# if hasSuccess}}
      <div class="alert alert-success">
        {{# each success}}
          {{this}}
        {{/ each}}
        <a href="#" class="close" data-dismiss="alert" aria-label="close"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      </div>
    {{/ if}}
    {{#if loginErrors}}
      {{#each loginErrors}}
        <div class="alert alert-danger" style="width:80%;margin:auto;">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </a>
          {{msg}}
        </div>
      {{/ each}}
    {{/ if}}
    {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">
              <span class="glyphicon glyphicon-remove"></span>
            </a>
            {{msg}}
          </div>
        {{/each}}
      {{/if}}
    <div class="form-group">
      <label for="email">الايميل</label>
      <input type="text" name="email" class="email" id="email" placeholder="الايميل">
    </div>
    <div class="form-group">
      <label for="password">كلمة المرور</label>
      <input type="password" name="password" class="password" id="password" placeholder="كلمة المرور">
    </div>
    
    <span class="remember-me"><input type="checkbox" name="rememberme"> تذكرني</span>
    <input type="submit" class="btn btn-primary submit" name="submit" value="submit">
    <div class="clearfix">
      <a href="/seller/forgot" class="reset-password pull-left">نسيت كلمة المرور ؟</a>
    </div>
  </form>
</div>
